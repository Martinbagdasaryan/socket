{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "built",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "typeRoots": ["./custom_typings", "./node_modules/@types"]
  }
}